<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Videos On The Block">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/../.."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/VideosOnTheBlock.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="application.Main"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.workspace}/Videos On The Block/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.base.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.controls.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.fxml.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.graphics.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.media.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.swing.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx.web.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/javafx-swt.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/Videos On The Block/lib/gson-2.8.6.jar"/>
        </jar>
    </target>
</project>
